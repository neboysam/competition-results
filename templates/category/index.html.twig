{% extends 'base.html.twig' %}

{% block title %}Liste de categories{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-9 mx-auto mt-4">
            {% if notification is defined %}
                {{ notification }}
            {% endif %}
            
            <h1 class="text-center">Liste de categories</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.categoryName }}</td>
                        <td>{{ category.categoryDescription }}</td>
                        <td>
                            <a href="" class="btn btn-sm btn-success">Show</a>
                            <a href="" class="btn btn-sm btn-danger">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Il n'a pas des categories.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_new_category') }}" class="btn btn-info">Ajouter une nouvelle categorie</a>
        </div>
    </div>
{% endblock %}